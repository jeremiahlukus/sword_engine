<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-8">Bible Explorer</h1>

  <% if flash[:error] %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-8" role="alert">
      <span class="block sm:inline"><%= flash[:error] %></span>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    <!-- Bible Versions -->
    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-xl font-semibold mb-4">Bible Versions</h2>
      <div class="space-y-2">
        <% if @versions.present? %>
          <% @versions.each do |version| %>
            <div class="p-3 hover:bg-gray-100 rounded cursor-pointer">
              <%= version['name'] %>
            </div>
          <% end %>
        <% else %>
          <p class="text-gray-500">No Bible versions available</p>
        <% end %>
      </div>
    </div>

    <!-- Books of the Bible -->
    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-xl font-semibold mb-4">Books of the Bible</h2>
      <div class="grid grid-cols-2 md:grid-cols-3 gap-2">
        <% if @books.present? %>
          <% @books.each do |book| %>
            <%= link_to bible_path(book['abbreviation']), class: "p-3 hover:bg-gray-100 rounded" do %>
              <div class="text-center">
                <div class="font-medium"><%= book['name'] %></div>
                <div class="text-sm text-gray-500"><%= book['abbreviation'] %></div>
              </div>
            <% end %>
          <% end %>
        <% else %>
          <p class="text-gray-500">No books available</p>
        <% end %>
      </div>
    </div>
  </div>
</div> 